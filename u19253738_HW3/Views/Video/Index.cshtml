@using u19253738_HW3.Models
@model List<FileModel>
@{
    ViewBag.Title = "Index";
    var counterCol = 0;
}

<h1>Video Files</h1>
<h4>
    ............"/Media/Videos/" folder
</h4>
<div class="container">
    <div class="row ">
        @foreach (FileModel file in Model)
        {
            if (counterCol != 0 && counterCol % 3 == 0)
            {
             @:</div>
             @:<div class="row">
            }
            <div class=" col-sm-3">
                <img class="img-responsive" src="~/Media/Videos/@file.FileName" style="width:270px; height:150px" />
                @file.FileName
                <button type="button" class="btn btn-success">
                    @Html.ActionLink("Download", "DownloadFile",
                         new { fileName = file.FileName })
                </button>
                <button type="button" class="btn btn-danger">
                    @Html.ActionLink("DELETE", "DeleteFile",
                      new { fileName = file.FileName },
                      new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                </button>
            </div>
            counterCol++;
        }
    </div>
</div>


