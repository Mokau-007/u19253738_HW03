@using u19253738_HW3.Models
@model List<FileModel>

@{
    ViewBag.Title = "Index";
}

<h1>Images of any file type</h1>
<h4>
    ............"/Media/Images/" folder
</h4>
<div class="container">
    <div class="row ">
        @foreach (FileModel file in Model)
        {
            <div class=" col-sm-4">
                <a href="~/Media/Images/@file.FileName" data-fancybox="gallery">
                    <img class="img-responsive" src="~/Media/Images/@file.FileName" style="width:270px; height:150px" />
                </a>
                @file.FileName
                <button type="button" class="btn btn-success">
                    @Html.ActionLink("Download", "DownloadFile",
                         new { fileName = file.FileName })
                </button>
                <button type="button" class="btn btn-danger">
                    @Html.ActionLink("DELETE", "DeleteFile",
                      new { fileName = file.FileName },
                      new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                </button>
            </div>
        }
    </div>
</div>
<script>
$(document).ready(function ($) {
$(".gallery a").fancybox();
});
</script>

